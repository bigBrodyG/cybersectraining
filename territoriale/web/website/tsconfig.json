{
	"compilerOptions": {
		"outDir": "build",
		"module": "CommonJS",
		"target": "ES2020",
		"lib": ["ES2020"],
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["*.ts"],
	"exclude": ["node_modules"],
	"ts-node": {
		"files": true
	}
}
